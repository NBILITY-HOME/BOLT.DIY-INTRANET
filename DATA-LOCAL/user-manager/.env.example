# ═══════════════════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════
DB_HOST=bolt-mariadb
DB_PORT=3306
DB_NAME=bolt_usermanager
DB_USER=bolt_um
DB_PASSWORD=your_secure_password_here
DB_CHARSET=utf8mb4

# ═══════════════════════════════════════════════════════════════════════════
# SECURITY SETTINGS
# ═══════════════════════════════════════════════════════════════════════════

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here_change_this

# Session Configuration
SESSION_LIFETIME=3600
SESSION_NAME=um_session
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# CSRF Protection
CSRF_TOKEN_LIFETIME=3600
CSRF_TOKEN_NAME=csrf_token

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# ═══════════════════════════════════════════════════════════════════════════
# RATE LIMITING & SECURITY
# ═══════════════════════════════════════════════════════════════════════════

# Rate Limiting (requests per window)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Login Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
LOGIN_THROTTLE_DELAY=3

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=60
API_RATE_LIMIT_WINDOW=60

# ═══════════════════════════════════════════════════════════════════════════
# LOGGING & AUDIT
# ═══════════════════════════════════════════════════════════════════════════

# Log Configuration
LOG_ENABLED=true
LOG_LEVEL=info
LOG_FILE=/var/www/html/app/logs/app.log
LOG_MAX_SIZE=10485760
LOG_ROTATION=daily

# Audit Logs
AUDIT_ENABLED=true
AUDIT_LOG_FILE=/var/www/html/app/logs/audit.log
AUDIT_RETENTION_DAYS=90

# ═══════════════════════════════════════════════════════════════════════════
# APPLICATION SETTINGS
# ═══════════════════════════════════════════════════════════════════════════

# Application
APP_NAME="User Manager"
APP_VERSION=2.0
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=Europe/Paris
APP_LANGUAGE=fr
APP_URL=http://localhost:8787

# Email Configuration (optional)
MAIL_ENABLED=false
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="User Manager"

# ═══════════════════════════════════════════════════════════════════════════
# PERFORMANCE & CACHING
# ═══════════════════════════════════════════════════════════════════════════

# Cache Configuration
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_LIFETIME=3600
CACHE_PATH=/var/www/html/app/cache

# Query Cache
QUERY_CACHE_ENABLED=true
QUERY_CACHE_LIFETIME=300

# Pagination
MAX_PER_PAGE=100
DEFAULT_PER_PAGE=25

# ═══════════════════════════════════════════════════════════════════════════
# FILE UPLOAD SETTINGS
# ═══════════════════════════════════════════════════════════════════════════

# Upload Configuration
UPLOAD_ENABLED=true
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf
UPLOAD_PATH=/var/www/html/uploads

# ═══════════════════════════════════════════════════════════════════════════
# BACKUP SETTINGS
# ═══════════════════════════════════════════════════════════════════════════

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=/var/www/html/backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=daily

# ═══════════════════════════════════════════════════════════════════════════
# FEATURE FLAGS
# ═══════════════════════════════════════════════════════════════════════════

# Features
FEATURE_USER_REGISTRATION=false
FEATURE_SOCIAL_LOGIN=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_API_ACCESS=true
FEATURE_AUDIT_LOGS=true

# ═══════════════════════════════════════════════════════════════════════════
# DEVELOPMENT SETTINGS (Only for APP_ENV=development)
# ═══════════════════════════════════════════════════════════════════════════

# Development
DEV_PROFILER=false
DEV_QUERY_LOG=false
DEV_ERROR_DETAILS=false
