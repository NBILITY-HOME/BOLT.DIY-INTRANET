# Configuration des ports
# ───────────────────────────────────────────────────────────────────────────
HOST_PORT_BOLT=6969
HOST_PORT_HOME=7070
HOST_PORT_UM=7071

# ───────────────────────────────────────────────────────────────────────────
# Fichier htpasswd (utilisateurs Bolt.DIY)
# ───────────────────────────────────────────────────────────────────────────
HTPASSWD_FILE=./DATA-LOCAL/nginx/.htpasswd

# ───────────────────────────────────────────────────────────────────────────
# MariaDB Configuration
# ───────────────────────────────────────────────────────────────────────────
MARIADB_PORT=3306
MARIADB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD
MARIADB_USER=bolt_um
MARIADB_PASSWORD=CHANGE_ME_USER_PASSWORD

# ───────────────────────────────────────────────────────────────────────────
# Application Security
# ───────────────────────────────────────────────────────────────────────────
APP_SECRET=CHANGE_ME_32_CHARS_SECRET_KEY
APP_ENV=production
APP_DEBUG=false

